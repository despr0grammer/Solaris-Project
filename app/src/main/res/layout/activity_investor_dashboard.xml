<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#171616"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dashboard del Inversionista"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"/>

        <!-- Suggested Panels -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sugerencias de Paneles Solares"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/textViewSuggestedPanels"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cargando sugerencias..."
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp"/>

        <!-- Suggested Locations -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sugerencias de Ubicaciones"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/textViewSuggestedLocations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cargando sugerencias..."
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp"/>

        <!-- Investor Metrics -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Datos Financieros"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/textViewRevenue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ingresos: $0.00 CLP"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/textViewCosts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Costos: $0.00 CLP"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/textViewExpenses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gastos: $0.00 CLP"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/textViewProfit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Utilidades: $0.00 CLP"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp"/>

    </LinearLayout>

</ScrollView>
